<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:id="@+id/images_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/description"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="4dp"
        android:maxLines="5"
        tools:text="Lorem ipsum dolor sit amet, colentesque placllis, neque ex hendrerit erat, placerat tristique urna purus sed arcu. Interdum et malesuada fames ac ante ipsum primis in faucibus." />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/expand_or_collapse_btn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:theme="@style/borderlessButtonStyle"
        tools:text="@string/more_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/animal_size_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_desc_animal_size"
            tools:src="@drawable/animal_size_medium_100dp" />

        <ImageView
            android:id="@+id/animal_gender_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_desc_animal_gender"
            tools:src="@drawable/animal_gender_male_100dp" />

        <ImageView
            android:id="@+id/animal_activity_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_desc_animal_activity"
            tools:src="@drawable/animal_activity_low_100dp" />
    </LinearLayout>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:alignmentMode="alignMargins"
        android:columnCount="2">

        <TextView
            android:id="@+id/info_shelter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_table_inner_margin"
            android:layout_marginRight="@dimen/details_table_inner_margin"
            android:text="@string/details_shelter" />

        <TextView
            android:id="@+id/info_shelter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Schronisko 1" />

        <TextView
            android:id="@+id/info_race_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_table_inner_margin"
            android:layout_marginRight="@dimen/details_table_inner_margin"
            android:text="@string/details_race" />

        <TextView
            android:id="@+id/info_race"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="race" />

        <TextView
            android:id="@+id/info_size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_table_inner_margin"
            android:layout_marginRight="@dimen/details_table_inner_margin"
            android:text="@string/details_size" />

        <TextView
            android:id="@+id/info_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="size" />

        <TextView
            android:id="@+id/info_gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_table_inner_margin"
            android:layout_marginRight="@dimen/details_table_inner_margin"
            android:text="@string/details_gender" />

        <TextView
            android:id="@+id/info_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="gender" />

        <TextView
            android:id="@+id/info_activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_table_inner_margin"
            android:layout_marginRight="@dimen/details_table_inner_margin"
            android:text="@string/details_activity" />

        <TextView
            android:id="@+id/info_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="activity" />

        <TextView
            android:id="@+id/info_training_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_table_inner_margin"
            android:layout_marginRight="@dimen/details_table_inner_margin"
            android:text="@string/details_training" />

        <TextView
            android:id="@+id/info_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="training" />

        <TextView
            android:id="@+id/info_sterilization_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_table_inner_margin"
            android:layout_marginRight="@dimen/details_table_inner_margin"
            android:text="@string/details_castration"/>

        <TextView
            android:id="@+id/info_sterilization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="sterilization" />

        <TextView
            android:id="@+id/info_chip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_table_inner_margin"
            android:layout_marginRight="@dimen/details_table_inner_margin"
            android:text="@string/details_chip" />

        <TextView
            android:id="@+id/info_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="chip" />

        <TextView
            android:id="@+id/info_vaccination_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_table_inner_margin"
            android:layout_marginRight="@dimen/details_table_inner_margin"
            android:text="@string/details_vaccination" />

        <TextView
            android:id="@+id/info_vaccination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="vaccination type" />

        <TextView
            android:id="@+id/info_admittance_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_table_inner_margin"
            android:layout_marginRight="@dimen/details_table_inner_margin"
            android:text="@string/details_admittance_date" />

        <TextView
            android:id="@+id/info_admittance_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="admittance_date" />

    </GridLayout>
</LinearLayout>
